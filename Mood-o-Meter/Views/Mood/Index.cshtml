@using Mood_o_Meter.Models
@model IEnumerable<Mood>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-unit">
    <p>
        <button type="button" class="btn-large" id="good-button">Good</button>
        <button type="button" class="btn-large" id="bad-button">Bad</button>
    </p>
</div>

<table class="table" id="mood-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Moood)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody id="mood-table-body">
        
    </tbody>
</table>

@section Scripts
{
    <script src="~/scripts/moood.js" ></script>
}
